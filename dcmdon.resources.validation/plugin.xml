<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="dcmdon.resources.validation.applications"
         name="Resource Validation Applications"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="dcmdon.resources.validation.main.Application">
         </run>
      </application>
   </extension>
   <extension
         id="ResourceValidationProducts"
         name="Resource Validation Products"
         point="org.eclipse.core.runtime.products">
      <product
            application="dcmdon.resources.validation.applications"
            name="Resource Validation Product">
         <property
               name="appName"
               value="Resource Validation Product">
         </property>
      </product>
   </extension>

</plugin>
